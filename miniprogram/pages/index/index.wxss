.button{
  display: flex;
  flex-direction: column;
  margin-top: 50rpx;
  width: 80%;
}

.content{
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-wrap: wrap;
  justify-content: center;
}
.content-item{
  height: 110rpx;
  width: 110rpx;
  position: relative;
  background-color: lightcoral;
  margin-top: 50rpx;
  margin-left: 60rpx;
  margin-right: 60rpx;
  margin-bottom: 50rpx;
}
.content-item image{
  width: 100%;
  height:100%;
}
.content-item-text{
  display: flex;
  flex-direction: column;
  position: absolute;
  font-size: 11px;
  color: black;
}